{
    "name": "crystalize.js",
    "version": "0.1.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "npm test -- --coverage",
        "test:badges": "npm run test:coverage  && jest-coverage-badges",
        "build": "tsup",
        "prepare": "husky install",
        "docs:update": "node docs.js",
        "commit": "cz"
    },
    "author": "zachbutton",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zachbutton/crystalize.js.git"
    },
    "bugs": {
        "url": "https://github.com/zachbutton/crystalize.js/issues"
    },
    "homepage": "https://github.com/zachbutton/crystalize.js#readme",
    "description": "",
    "devDependencies": {
        "@types/jest": "^29.5.4",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.3",
        "jest": "^29.6.4",
        "jest-coverage-badges": "^1.1.2",
        "lint-staged": "^14.0.1",
        "markdown-toc": "^1.2.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "*.{js,css,md}": "prettier --write"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
